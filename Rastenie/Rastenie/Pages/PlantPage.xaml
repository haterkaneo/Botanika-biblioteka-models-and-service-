<Page x:Class="Rastenie.Pages.PlantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rastenie.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"  
      Title="PlantPage">

    <Grid x:Name="MainGrid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Название" FontSize="20"/>
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding PlantType.Name}"/>
            <TextBlock Text="Описание" FontSize="20"/>
            <TextBlock Text="{Binding Description}"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Ареал" FontSize="20"/>
            <TextBlock Text="{Binding Countries}"/>
            <Button x:Name="BBack" Content="Назад" Click="BBack_Click"/>
        </StackPanel>
        <Image Source="{Binding Image}" VerticalAlignment="Top" Width="300" Grid.Column="1"/>
    </Grid>
</Page>
